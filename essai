import numpy as np

def creer_grille(n, m):
    """Crée une grille avec des bordures 'X' et des routes '.'"""
    grille = np.full((n, m), '.', dtype=str)  # Remplit toute la grille avec des routes (.)
    
    # Ajouter les bordures (X)
    grille[0, :] = 'X'
    grille[-1, :] = 'X'
    grille[:, 0] = 'X'
    grille[:, -1] = 'X'
    
    return grille

def placer_feu_rouge(grille, x, y):
    """Ajoute un feu rouge 'F' à la position (x, y)"""
    if grille[x, y] == '.':  # Vérifie que c'est une route
        grille[x, y] = 'F'

def placer_tramway(grille, ligne):
    """Ajoute un tramway 'T' sur toute la ligne donnée"""
    for j in range(1, grille.shape[1] - 1):  # On évite les bordures
        if grille[ligne, j] == '.':  # Vérifie que c'est une route
            grille[ligne, j] = 'T'

def afficher_grille(grille):
    """Affiche la grille proprement en texte"""
    for ligne in grille:
        print(" ".join(ligne))

# Création de la grille
grille = creer_grille(20, 22)

# Placement de feux rouges
placer_feu_rouge(grille, 2, 5)
placer_feu_rouge(grille, 9, 7)

# Placement d'un tramway sur la ligne 5
placer_tramway(grille, 5)

# Affichage de la grille
afficher_grille(grille)
